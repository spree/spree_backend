<div class="row align-items-center">
  <div id="ImageGalleryLayout" class="col-12 col-md-6 text-center m-auto">
    <div id="LayoutType">
      <div id="Default" class="<% unless @cms_section.layout_style == 'Default' %>d-none<% end %>">
        <%= svg_icon name: "default-layout.svg", width: '150', height: '150' %>
      </div>
      <div id="Reversed" class="<% unless @cms_section.layout_style == 'Reversed' %>d-none<% end %>">
        <%= svg_icon name: "reversed-layout.svg", width: '150', height: '150' %>
      </div>
    </div>

    <%= f.field_container :layout_style do %>
      <%= f.label :layout_style, Spree.t('admin.cms.image_gallery.layout_style') %>
      <%= f.select(:layout_style,
          spree_humanize_dropdown_values('Spree::Cms::Sections::ImageGallery',
                                          { const: 'LAYOUT_OPTIONS' }),
                                          { include_blank: false }) %>
      <%= f.error_message_on :layout_style %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-12 col-md-4 mb-3">
    <div id="image_a_details" class="card p-3">
      <div class="text-center">
        <h4 class="pb-2"><%= Spree.t('admin.cms.image_gallery.image_a') %></h4>
        <% @cms_section.build_image_one unless @cms_section.image_one %>
        <%= f.fields_for :image_one do |ff| %>
          <%= f.field_container :image_one do %>
            <% if @cms_section.image_one.attachment&.attached? && @cms_section.image_one.attachment&.variable? %>
              <figure class="admin-img-holder">
                <%= image_tag main_app.cdn_image_url(@cms_section.image_one.attachment.variant(resize_to_limit: [244, 104])) %>
              </figure>
            <% elsif @cms_section.image_one.attachment&.attached? && @cms_section.image_one.attachment&.image? %>
              <figure class="admin-img-holder">
                <%= image_tag main_app.cdn_image_url(@cms_section.image_one.attachment) %>
              </figure>
            <% end %>
            <%= f.field_container :image_one do %>
              <%= ff.file_field :attachment %>
              <%= f.error_message_on :image_one %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <small class="text-muted mb-4"><%= Spree.t('admin.cms.image_gallery.square_image') %></small>

      <%= f.field_container :title_one do %>
        <%= f.label :title_one, Spree.t('admin.cms.title') %>
        <%= f.text_field :title_one, class: 'form-control' %>
        <%= f.error_message_on :title_one %>
      <% end %>

      <div class="col-12"><hr></div>
      <% unless rails_5? %>
        <%= f.field_container :link_type_one do %>
          <%= f.label :link_type_one, Spree.t('admin.navigation.link_to') %>
          <%= f.select(:link_type_one,
              spree_humanize_dropdown_values('Spree::Cms::Sections::ImageGallery',
                                              { const: 'LINKED_RESOURCE_TYPE' }),
                                              { include_blank: false },
                                              class: 'link_switcher',
                                              data: { target_field: :link_one}) %>
          <%= f.error_message_on :link_type_one %>
        <% end %>
      <% end %>
      <%= render "spree/admin/shared/link_fields", resource: @cms_section, linked_type: @cms_section.link_type_one, save_to: :link_one, f: f %>
    </div>
  </div>

