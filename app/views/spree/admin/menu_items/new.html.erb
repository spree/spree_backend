<% content_for :page_title do %>
  <%= link_to Spree.t('admin.navigation.all_menus'), spree.admin_menus_path %> /
  <%= link_to @menu.name, spree.edit_admin_menu_path(@menu) %> / <%= Spree.t('admin.navigation.new_menu_item') %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @menu_item } %>

<%= form_for [:admin, @menu, @menu_item] do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= render partial: 'spree/admin/shared/new_resource_links' %>
<% end %>
