<div data-hook="admin_oauth_application_form_fields">
  <%= f.field_container :name, 'data-hook' => "oauth_application_name" do %>
    <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
    <%= f.text_field :name, class: 'form-control', required: true %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :scopes, 'data-hook' => "oauth_application_scopes" do %>
    <%= f.label :scopes, Spree.t(:scopes) %> <span class="required">*</span>
    <%= f.text_field :scopes, class: 'form-control' %>
    <%= f.error_message_on :scopes %>
    <small class="form-text text-muted">
      Possible values:
      <ul>
        <li><strong>admin read</strong> - read only access</li>
        <li><strong>admin write</strong> - read and write access</li>
      </ul>
    </small>
  <% end %>

  <div data-hook="additional_oauth_application_fields"></div>
</div>
