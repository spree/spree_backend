<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= csrf_meta_tags %>

<title>
  <% if content_for? :title %>
    <%= yield :title %>
  <% else %>
    <%= "Spree #{Spree.t('administration')}: " %>
    <%= Spree.t(controller.controller_name, default: controller.controller_name.titleize) %>
  <% end %>
</title>

<%= stylesheet_link_tag 'spree/backend/all', media: :all %>

<script>
  <%== "var AUTH_TOKEN = #{form_authenticity_token.inspect};" %>
  <%== "var OAUTH_TOKEN = '#{admin_oauth_token}';" if defined?(admin_oauth_token) %>
  <%== "var ADDRESS_FIELDS = #{Spree::Address::ADDRESS_FIELDS}" %>
</script>
<%= render 'spree/admin/shared/paths' %>
<%= javascript_include_tag "spree-dashboard", defer: true, data: { turbo_track: "reload" } %>
<%= javascript_include_tag 'spree/backend/all', data: { turbo_track: "reload" } %>
<%= render "spree/admin/shared/translations" %>

<%= yield :head %>
