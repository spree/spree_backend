$('#order_tab_summary #order_status').html('<%= j Spree.t(@order.state, scope: :order_state) %>');
$('#order_tab_summary #order_total').html('<%= j @order.display_total.to_html %>');

<% if @order.completed? %>
  <% if @order.payment_state.present? %>
    $('#order_tab_summary #payment_status').html('<%= j Spree.t(@order.payment_state, scope: :payment_states, default: [:missing, "none"]) %>');
  <% end %>
  <% if @order.shipment_state.present? %>
    $('#order_tab_summary #shipment_status').html('<%= j Spree.t(@order.shipment_state, scope: :shipment_state, default: [:missing, "none"]) %>');
  <% end %>
<% end %>
