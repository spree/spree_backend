<ul id="sidebar-orders" class="collapse nav nav-pills nav-stacked pb-2" data-hook="admin_orders">
  <%= tab :orders, match_path: /completed_at_not_null\%5D\=1/, url: spree.admin_orders_path(q: { completed_at_not_null: '1' }), label: 'All Orders' %>
<%= tab :draft_orders, match_path: /cart/, url: spree.admin_orders_path(q: { completed_at_not_null: false, state_eq: :cart}), label: 'Draft Orders' %>
  <%= tab :abandoned_checkouts, match_path: /state_in/, url: spree.admin_orders_path(q: { completed_at_not_null: false, state_in: %i[address delivery payment confirm]}), label: 'Abandoned checkouts' %>
</ul>
