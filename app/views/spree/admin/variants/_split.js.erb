<script type='text/template' id='variant_split_template'>
  <tr class='stock-item-split' data-variant-id='{{variant.id}}'>
    <td colspan='2'>
      <%= Spree.t("move_variant_to", default: "Move {{variant.name}} to") %>
    </td>
    <td colspan='2'>
    <select name="item_stock_location" id='item_stock_location' style='width:100%;'>
      <option></option>
      <optgroup label="<%=Spree.t('existing_shipments')%>">
        {{#each shipments}}
        <option data-shipment-number='{{this.number}}' value='{{this.stock_location_id}}'>{{this.stock_location.name}}({{this.number}})</option>
        {{/each}}
      </optgroup>
      <optgroup label="<%=Spree.t('new_shipment_at_location')%>">
        {{#each variant.stock_items}}
          <option data-new-shipment='true' value='{{this.stock_location_id}}'>{{this.stock_location_name}}&nbsp({{this.count_on_hand}} on hand)</option>
        {{/each}}
      </optgroup>
      </select>
    </td>
    <td>
      <input class="quantity form-control" id="item_quantity" type="number" min="1" value="1" max="{{max_quantity}}">
    </td>
    <td class='actions'>
      <span class='d-flex justify-content-center'>
        <a href='#' class='cancel-split with-tip btn btn-sm btn-outline-secondary' title='Cancel'>
          <%= svg_icon name: "cancel", classes: 'icon-cancel', width: '16', height: '16' %>
        </a>
        <a href='#' class='icon-save-split save-split with-tip btn btn-sm btn-success' title='Save'>
          <%= svg_icon name: "split", classes: 'icon-save', width: '16', height: '16' %>
        </a>
      </span>
    </td>
  </tr>
</script>
